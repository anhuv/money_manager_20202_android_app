<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.poly.quanlychitieu.fragment.TKThangFragment">

    <LinearLayout
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tháng :"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spn_Thang"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="Năm :"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spn_Nam"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAlignment="center" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="23sp"
            android:text="Tổng thu : "
            android:background="@color/colorPrimary"
            android:padding="10dp"/>
        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tv_tongThang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="0 VND"
            android:layout_marginLeft="16dp"
            android:textSize="23sp"/>
        <TextView

            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="23sp"
            android:text="Chi tiêu : "
            android:background="@color/colorPrimary"
            android:padding="10dp"/>
        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tv_chiThang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="0 VND"
            android:layout_marginLeft="16dp"
            android:textSize="23sp"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="23sp"
            android:text="Số dư : "
            android:background="@color/colorPrimary"
            android:padding="10dp"/>
        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tv_duThang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="0 VND"
            android:layout_marginLeft="16dp"
            android:textSize="23sp"/>
    </LinearLayout>

</FrameLayout>